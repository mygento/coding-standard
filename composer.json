{
  "name": "mygento/coding-standard",
  "description": "A set of PHP rules and sniffs",
  "homepage": "https://github.com/mygento/coding-standard",
  "license": "MIT",
  "authors": [{
    "name": "Mygento",
    "homepage": "http://www.mygento.net",
    "email": "connect@mygento.net"
  }],
  "target-dir": "Mygento-Mage2",
  "require": {
    "squizlabs/php_codesniffer": "3.*",
    "friendsofphp/php-cs-fixer": "~2.2.1",
    "phpmd/phpmd": "2.*",
    "magento-ecg/coding-standard": "3.*",
    "jakub-onderka/php-parallel-lint": "^0.9.2",
    "phpro/grumphp": "0.14.0",
    "symfony/config": "< 4.0",
    "symfony/console": "< 4.0",
    "symfony/dependency-injection": "< 4.0",
    "symfony/event-dispatcher": "< 4.0",
    "symfony/filesystem": "< 4.0",
    "symfony/finder": "< 4.0",
    "symfony/options-resolver": "< 4.0",
    "symfony/process": "< 4.0",
    "symfony/yaml": "< 4.0",
    "symfony/debug": "< 4.0",
    "symfony/stopwatch": "< 4.0"
  },
  "autoload-dev": {
    "psr-4": {
      "Magento\\Sniffs\\": "Magento/Sniffs/",
      "Magento\\TestFramework\\": "Magento/TestFramework/"
    }
  }
}
